                    </a>
                </li>
                <!-- Outras opções -->
            </ul>
        </div>

        <!-- Botões de usuário -->
        <div class="form-inline">
            <a href="@Url.Action("Carrinho", "Cart")" class="btn btn-outline-light">Carrinho</a>
            <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light ml-2">Login</a>
