    </nav>

    <!-- Seção de botões centrais -->
    <div class="img-container">
        <div class="row my-5 text-center portifolio-imagens">
            <a class= "imagem-menu"href="@Url.Action("Portfolio", "Home")">
                <img src="/imagens/cafe_vermelho.jpg" class="imagem-retangular rounded" alt="Café Vermelho">
            </a>
            <a class="imagem-menu" href="@Url.Action("Portfolio", "Home")">
                <img src="/imagens/cafe_torrado.jpg" class="imagem-retangular rounded" alt="Café Torrado">
            </a>

            <a class="imagem-menu" href="@Url.Action("Portfolio", "Home")">
                <img src="/imagens/cafe_verde.jpg" class="imagem-retangular rounded" alt="Café Verde">
            </a>
        </div>
    </div>

    <div class="img-container">

        <!-- Botões inferiores -->
        <div class="row text-center my-3 portifolio-textos">
            <div class="col">
                <a href="@Url.Action("SobreNos", "Home")" class="btn btn-brown">Sobre Nós</a>
            </div>
            <div class="col">
                <a href="@Url.Action("Portfolio", "Home")" class="btn btn-brown">Portfólio</a>
            </div>
            <div class="col">
                <a href="@Url.Action("NossaMissao", "Home")" class="btn btn-brown">Nossa Missão</a>
            </div>
            <div class="col">
